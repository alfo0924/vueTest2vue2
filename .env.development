# API 設定
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=15000

# 應用程式設定
VITE_APP_TITLE=市民卡系統 (開發環境)
VITE_APP_VERSION=1.0.0

# JWT 設定
VITE_JWT_SECRET=your_jwt_secret_key
VITE_JWT_EXPIRATION=86400

# 資料庫設定
VITE_DB_HOST=localhost
VITE_DB_PORT=3306
VITE_DB_NAME=citizencard_dev
VITE_DB_USER=root
VITE_DB_PASSWORD=password

# 上傳檔案設定
VITE_UPLOAD_MAX_SIZE=5242880
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# 快取設定
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION=3600

# 日誌設定
VITE_LOG_LEVEL=debug
VITE_LOG_TO_FILE=false

# 安全設定
VITE_ENABLE_CSRF=true
VITE_CORS_ENABLED=true
VITE_CORS_ORIGIN=http://localhost:3000

# PWA 設定
VITE_ENABLE_PWA=true
VITE_PWA_NAME=市民卡系統
VITE_PWA_SHORT_NAME=市民卡
VITE_PWA_THEME_COLOR=#1976D2
VITE_PWA_BACKGROUND_COLOR=#FFFFFF

# 第三方服務設定
VITE_GOOGLE_ANALYTICS_ID=your_ga_id
VITE_FACEBOOK_APP_ID=your_fb_app_id

# 支付相關設定
VITE_MIN_TOPUP_AMOUNT=100
VITE_MAX_TOPUP_AMOUNT=10000
VITE_PAYMENT_GATEWAY_URL=http://localhost:8080/payment

# 電影相關設定
VITE_MAX_BOOKING_SEATS=4
VITE_BOOKING_EXPIRATION=900

# 優惠相關設定
VITE_MAX_DISCOUNT_USAGE=10
VITE_DISCOUNT_EXPIRATION=7200

# 系統設定
VITE_DEFAULT_LANGUAGE=zh-TW
VITE_DEFAULT_THEME=light
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_FILE_UPLOAD_SIZE=5

# 開發工具設定
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK=true
VITE_MOCK_DELAY=1000

# WebSocket 設定
VITE_WS_ENABLED=true
VITE_WS_URL=ws://localhost:8080/ws

# 錯誤追蹤設定
VITE_ERROR_TRACKING_ENABLED=true
VITE_ERROR_TRACKING_DSN=your_error_tracking_dsn

# 效能監控設定
VITE_PERFORMANCE_MONITORING_ENABLED=true
VITE_PERFORMANCE_MONITORING_ID=your_performance_monitoring_id

# 推播通知設定
VITE_PUSH_NOTIFICATION_ENABLED=true
VITE_PUSH_PUBLIC_KEY=your_push_public_key

# 地圖服務設定
VITE_MAP_API_KEY=your_map_api_key
VITE_MAP_DEFAULT_CENTER=25.0374865,121.5647688
VITE_MAP_DEFAULT_ZOOM=13

# 驗證碼設定
VITE_CAPTCHA_ENABLED=true
VITE_CAPTCHA_SITE_KEY=your_captcha_site_key

# 搜尋設定
VITE_SEARCH_MIN_LENGTH=2
VITE_SEARCH_DEBOUNCE=300

# 多媒體設定
VITE_MAX_IMAGE_SIZE=2097152
VITE_ALLOWED_IMAGE_TYPES=.jpg,.jpeg,.png,.gif
VITE_IMAGE_COMPRESSION_QUALITY=0.8

# 備註：
# 1. 所有敏感資訊在正式環境中應該使用環境變數或安全的設定管理系統
# 2. 開發環境的設定值可以較為寬鬆，但正式環境應該更嚴格
# 3. 請根據實際需求調整這些設定值