# API 設定
VITE_API_BASE_URL=https://api.citizencard.com/api
VITE_API_TIMEOUT=10000

# 應用程式設定
VITE_APP_TITLE=市民卡系統
VITE_APP_VERSION=1.0.0

# JWT 設定
VITE_JWT_SECRET=production_jwt_secret_key_should_be_very_long_and_complex
VITE_JWT_EXPIRATION=86400

# 資料庫設定
VITE_DB_HOST=production-db.citizencard.com
VITE_DB_PORT=3306
VITE_DB_NAME=citizencard_prod
VITE_DB_USER=prod_user
VITE_DB_PASSWORD=strong_production_password

# 上傳檔案設定
VITE_UPLOAD_MAX_SIZE=2097152 # 2MB
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png

# 快取設定
VITE_CACHE_ENABLED=true
VITE_CACHE_DURATION=7200

# 日誌設定
VITE_LOG_LEVEL=error
VITE_LOG_TO_FILE=true
VITE_LOG_FILE_PATH=/var/log/citizencard/app.log

# 安全設定
VITE_ENABLE_CSRF=true
VITE_CORS_ENABLED=true
VITE_CORS_ORIGIN=https://citizencard.com

# PWA 設定
VITE_ENABLE_PWA=true
VITE_PWA_NAME=市民卡系統
VITE_PWA_SHORT_NAME=市民卡
VITE_PWA_THEME_COLOR=#1976D2
VITE_PWA_BACKGROUND_COLOR=#FFFFFF

# 第三方服務設定
VITE_GOOGLE_ANALYTICS_ID=GA-PRODUCTION-ID
VITE_FACEBOOK_APP_ID=FB-PRODUCTION-APP-ID

# 支付相關設定
VITE_MIN_TOPUP_AMOUNT=100
VITE_MAX_TOPUP_AMOUNT=10000
VITE_PAYMENT_GATEWAY_URL=https://payment.citizencard.com/api

# 電影相關設定
VITE_MAX_BOOKING_SEATS=4
VITE_BOOKING_EXPIRATION=900

# 優惠相關設定
VITE_MAX_DISCOUNT_USAGE=10
VITE_DISCOUNT_EXPIRATION=7200

# 系統設定
VITE_DEFAULT_LANGUAGE=zh-TW
VITE_DEFAULT_THEME=light
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_FILE_UPLOAD_SIZE=2

# WebSocket 設定
VITE_WS_ENABLED=true
VITE_WS_URL=wss://ws.citizencard.com

# 錯誤追蹤設定
VITE_ERROR_TRACKING_ENABLED=true
VITE_ERROR_TRACKING_DSN=https://production-error-tracking-dsn

# 效能監控設定
VITE_PERFORMANCE_MONITORING_ENABLED=true
VITE_PERFORMANCE_MONITORING_ID=production-monitoring-id

# 推播通知設定
VITE_PUSH_NOTIFICATION_ENABLED=true
VITE_PUSH_PUBLIC_KEY=production_push_public_key

# 地圖服務設定
VITE_MAP_API_KEY=production_map_api_key
VITE_MAP_DEFAULT_CENTER=25.0374865,121.5647688
VITE_MAP_DEFAULT_ZOOM=13

# 驗證碼設定
VITE_CAPTCHA_ENABLED=true
VITE_CAPTCHA_SITE_KEY=production_captcha_site_key

# 搜尋設定
VITE_SEARCH_MIN_LENGTH=2
VITE_SEARCH_DEBOUNCE=300

# 安全性設定
VITE_ENABLE_RATE_LIMITING=true
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900
VITE_ENABLE_SSL=true
VITE_SSL_CERT_PATH=/etc/ssl/certs/citizencard.crt
VITE_SSL_KEY_PATH=/etc/ssl/private/citizencard.key

# CDN 設定
VITE_USE_CDN=true
VITE_CDN_URL=https://cdn.citizencard.com

# 備份設定
VITE_BACKUP_ENABLED=true
VITE_BACKUP_INTERVAL=86400
VITE_BACKUP_RETENTION_DAYS=30

# 郵件設定
VITE_SMTP_HOST=smtp.production.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=noreply@citizencard.com
VITE_SMTP_PASSWORD=production_smtp_password

# 維護模式設定
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=系統正在維護中，請稍後再試。

# 系統限制
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOGIN_LOCKOUT_TIME=900
VITE_SESSION_TIMEOUT=3600
VITE_PASSWORD_EXPIRY_DAYS=90

# 備註：
# 1. 所有敏感資訊應該通過安全的環境變數管理系統設置
# 2. 生產環境的設定應該更加嚴格和安全
# 3. 所有的 URL 都應該使用 HTTPS
# 4. 應該定期更新和輪換所有的密鑰和密碼