# 應用程式設定
VITE_APP_TITLE=市民卡系統
VITE_APP_DESCRIPTION=整合性的智慧城市服務平台
VITE_APP_VERSION=1.0.0

# API 設定
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=15000

# 資料庫設定 (MariaDB)
VITE_DB_HOST=localhost
VITE_DB_PORT=3306
VITE_DB_NAME=citizencard_db
VITE_DB_USER=root
VITE_DB_PASSWORD=your_password

# JWT 設定
VITE_JWT_SECRET=your_jwt_secret_key
VITE_JWT_EXPIRE=24h

# 檔案上傳設定
VITE_UPLOAD_MAX_SIZE=5242880  # 5MB
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# 郵件設定 (用於驗證和通知)
VITE_MAIL_HOST=smtp.gmail.com
VITE_MAIL_PORT=587
VITE_MAIL_USER=your_email@gmail.com
VITE_MAIL_PASSWORD=your_email_password

# 第三方登入設定
# Google OAuth
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_GOOGLE_CLIENT_SECRET=your_google_client_secret
VITE_GOOGLE_CALLBACK_URL=http://localhost:8080/auth/google/callback

# Facebook OAuth
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_FACEBOOK_APP_SECRET=your_facebook_app_secret
VITE_FACEBOOK_CALLBACK_URL=http://localhost:8080/auth/facebook/callback

# 支付設定
VITE_PAYMENT_GATEWAY_URL=https://payment.example.com/api
VITE_PAYMENT_MERCHANT_ID=your_merchant_id
VITE_PAYMENT_API_KEY=your_payment_api_key

# 快取設定
VITE_CACHE_ENABLE=true
VITE_CACHE_DURATION=3600

# 安全設定
VITE_CORS_ORIGIN=http://localhost:3000
VITE_RATE_LIMIT_WINDOW=15
VITE_RATE_LIMIT_MAX=100

# 日誌設定
VITE_LOG_LEVEL=info
VITE_LOG_FILE_PATH=./logs/app.log

# PWA 設定
VITE_PWA_ENABLE=true
VITE_PWA_APP_NAME=市民卡
VITE_PWA_APP_SHORT_NAME=市民卡
VITE_PWA_THEME_COLOR=#1976D2
VITE_PWA_BACKGROUND_COLOR=#FFFFFF

# 其他系統設定
VITE_MAX_UPLOAD_SIZE=5242880
VITE_DEFAULT_LANGUAGE=zh-TW
VITE_DEFAULT_THEME=light
VITE_SESSION_TIMEOUT=3600000

# 開發環境特定設定
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SOURCE_MAP=true

# 測試環境特定設定
VITE_TEST_API_URL=http://test-api.example.com
VITE_TEST_DB_NAME=citizencard_test

# 生產環境特定設定
VITE_PROD_API_URL=https://api.example.com
VITE_PROD_ENABLE_LOGS=false

# 功能開關
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_REVIEWS=true
VITE_FEATURE_CHAT=false

# 系統限制
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_PASSWORD_MIN_LENGTH=8
VITE_SESSION_TIMEOUT=3600
VITE_MAX_FILE_UPLOADS=5

# 錯誤追蹤設定
VITE_SENTRY_DSN=your_sentry_dsn
VITE_SENTRY_ENVIRONMENT=development

# 分析工具設定
VITE_GOOGLE_ANALYTICS_ID=your_ga_id
VITE_HOTJAR_ID=your_hotjar_id